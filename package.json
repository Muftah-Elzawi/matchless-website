    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.4",
    "morgan": "^1.9.1",
    "react-bootstrap": "^1.0.0-beta.16"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
